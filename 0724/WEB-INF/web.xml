<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>0724</display-name>
  <security-role>
    <description></description>
    <role-name>admin</role-name>
  </security-role>
  <security-constraint>
    <display-name>0724</display-name>
    <web-resource-collection>
      <web-resource-name>0724</web-resource-name>
      <description></description>
      <url-pattern>/addProduct.jsp</url-pattern>
      <url-pattern>/editProduct.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description>관리자</description>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  <error-page>
    <error-code>404</error-code>
    <location>/webshop/exceptionNoPage.jsp</location>
  </error-page>
  <filter>
    <filter-name>LogFilter</filter-name>
    <filter-class>webshop.filter.LogFileFilter</filter-class>
    <init-param>
      <param-name>filename</param-name>
      <param-value>C:\\logs\\webshop.log</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>LogFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>BoardController</servlet-name>
    <servlet-class>webshop.controller.BoardController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BoardController</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
</web-app>